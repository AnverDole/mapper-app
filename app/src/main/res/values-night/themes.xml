<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Mapper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="cardBackgroundColor">@color/black_lighter</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/roboto_condensed_regular</item>

        <item name="android:textColor">@color/white_darker</item>
    </style>

    <style name="Theme.Mapper.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Mapper.TransparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor" >@color/white</item>
        <item name="iconTint" >@color/white</item>
    </style>


</resources>